<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:background="#eaf4fe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/CardTitulo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"

            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kid_uno"
                android:padding="1dp"
                android:background="#b0e0e6"
                android:text="@string/app_name"
                android:textAlignment="center"
                android:textColor="#273D49"
                android:textSize="50sp"
                />


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/kid_regular"
            android:text="@string/Inicio"
            android:padding="10dp"
            android:textAlignment="textStart"
            android:background="#b0e0e6"
            android:textColor="#273D49"
            android:textSize="20sp"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/animales"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:radius="8dp">

            <!-- Primer LinearLayout -->
            <LinearLayout
                android:background="#98fb98"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imagen1"
                    android:layout_width="80dp"
                    android:background="@drawable/animales"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="10dp"
                    />

                <TextView
                    android:background="#a3ffac"
                    android:id="@+id/parrafo1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textColor="#273D49"
                    android:textSize="30sp"
                    android:fontFamily="@font/kid_regular"
                    android:text="Animales del mundo"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/banderas"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:radius="8dp">

            <!-- Segundo LinearLayout -->
            <LinearLayout
                android:background="#ffa07a"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imagen2"
                    android:background="@drawable/bandera"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="10dp"
                    />

                <TextView
                    android:background="#ffdab9"
                    android:id="@+id/parrafo2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/kid_regular"
                    android:text="Paises del mundo"
                    android:textAlignment="center"
                    android:textColor="#273D49"
                    android:textSize="30sp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"/>
            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/vegetacion"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:radius="8dp">
            <!-- Tercer LinearLayout -->


            <LinearLayout
                android:background="#ffe180"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imagen3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/vegetacion"
                    android:layout_marginTop="10dp"
                    />

                <TextView
                    android:background="#ffe5b4"
                    android:id="@+id/parrafo3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/kid_regular"
                    android:text="Vegetacion del mundo"
                    android:textAlignment="center"
                    android:textColor="#273D49"
                    android:textSize="30sp"
                    android:paddingEnd="16dp"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

</ScrollView>
